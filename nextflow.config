// Params
flowpath = 'trimflow'
params.outdir = "./${flowpath}_results"

// Manifest
manifest {
  author = 'Maxime HEBRARD'
  homePage = 'http://github.com/mhebrard/TrimFlow'
  description = 'Trimming Pipeline'
}

////
// TEST SINGULARITY BY DEFAULT
// Variable to specify the docker / singularity image tag to use
// Picks up on use of -r 1.3 in nextflow command
process.container = { "mhebrard/TrimFlow:${workflow.revision ? workflow.revision : 'latest'}" }
//
// container = 'mhebrard/TrimFlow'
singularity.enabled = true
////

// Traces
report {
  enabled = true
  file = "${params.outdir}/pipeline_info/${flowpath}_report.html"
}
trace {
  enabled = true
  file = "${params.outdir}/pipeline_info/${flowpath}_trace.txt"
}
timeline {
  enabled = true
  file = "${params.outdir}/pipeline_info/${flowpath}_timeline.html"
}
dag {
  enabled = true
  file = "${params.outdir}/pipeline_info/${flowpath}_dag.html"
}
